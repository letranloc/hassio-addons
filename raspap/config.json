{
  "name": "RaspAp",
  "version": "0.0.1",
  "slug": "raspap",
  "description": "Create a WiFi access point to directly connect devices to Home Assistant",
  "arch": ["armv7", "aarch64", "amd64", "i386"],
  "url": "https://github.com/letranloc/tree/master/raspap-webgui",
  "startup": "system",
  "boot": "auto",
  "host_network": true,
  "apparmor": true,
  "host_dbus": true,
  "privileged": ["NET_ADMIN"],
  "ingress": true,
  "ingress_port": 80,
  "options": {
    "ssid": "homeassistant",
    "wpa_passphrase": "ChangeMe",
    "channel": 6,
    "address": "192.168.100.1",
    "netmask": "255.255.255.0",
    "broadcast": "192.168.100.255",
    "interface": "wlan0",
    "hide_ssid": 0,
    "dhcp": 1,
    "dhcp_start_addr": "192.168.100.10",
    "dhcp_end_addr": "192.168.100.200",
    "allow_mac_addresses": [],
    "deny_mac_addresses": [],
    "debug": 0,
    "hostapd_config_override": []
  },
  "schema": {
    "ssid": "str",
    "wpa_passphrase": "str",
    "channel": "int",
    "address": "str",
    "netmask": "str",
    "broadcast": "str",
    "interface": "str",
    "hide_ssid": "int",
    "dhcp": "int",
    "dhcp_start_addr": "str",
    "dhcp_end_addr": "str",
    "allow_mac_addresses": ["str"],
    "deny_mac_addresses": ["str"],
    "debug": "int",
    "hostapd_config_override": ["str"]
  }
}
